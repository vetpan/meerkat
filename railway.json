{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "DOCKERFILE"
    },
    "deploy": {
        "startCommand": "sh -c '/entrypoint.sh gunicorn config.wsgi:application --bind 0.0.0.0:${PORT} --workers 2 --timeout 120'",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    }
}