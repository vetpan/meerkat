    <script>
        // CSRF Token
        function getCsrfToken() {
            return document.querySelector('[name=csrfmiddlewaretoken]').value;
        }

        // Auto-fill name from URL
        function autoFillName(url) {
            if (!url) return;
            let domain = url.replace(/^(https?:\/\/)?(www\.)?/, '');
            let parts = domain.split(/[\/\.]/);
            let name = parts[0];
            if (name) {
                name = name.charAt(0).toUpperCase() + name.slice(1).toLowerCase();
                document.getElementById('add-name').value = name;
            }
        }

        // Normalize URL
        function normalizeUrl(url) {
            url = url.trim();
            if (!url.startsWith('http://') && !url.startsWith('https://')) {
                if (!url.startsWith('www.')) {
                    url = 'https://www.' + url;
                } else {
                    url = 'https://' + url;
                }
            }
            return url;
        }

        // Modal functions
        function openAddTargetModal() {
            document.getElementById('add-url').value = '';
            document.getElementById('add-name').value = '';
            document.getElementById('addTargetModal').classList.remove('hidden');
            document.getElementById('add-url').focus();
        }

        function closeAddTargetModal() {
            document.getElementById('addTargetModal').classList.add('hidden');
        }

        function openEditTargetModal(id, name, url, interval) {
            document.getElementById('edit-target-id').value = id;
            document.getElementById('edit-name').value = name;
            document.getElementById('edit-url').value = url;
            document.getElementById('edit-interval').value = interval;
            document.getElementById('editTargetModal').classList.remove('hidden');
        }

        function closeEditTargetModal() {
            document.getElementById('editTargetModal').classList.add('hidden');
        }

        function openFaqModal() {
            document.getElementById('faqModal').classList.remove('hidden');
        }

        function closeFaqModal() {
            document.getElementById('faqModal').classList.add('hidden');
        }

        // Create target and start scan with visible progress
        function createTarget(event) {
            event.preventDefault();
            const name = document.getElementById('add-name').value;
            const url = normalizeUrl(document.getElementById('add-url').value);
            const interval = document.getElementById('add-interval').value;

            const formData = new FormData();
            formData.append('name', name);
            formData.append('url', url);
            formData.append('interval', interval);

            // UX: Disable button and show spinner
            const btn = document.getElementById('add-target-btn');
            const spinner = document.getElementById('add-target-spinner');
            btn.disabled = true;
            btn.classList.add('opacity-75', 'cursor-not-allowed');
            spinner.classList.remove('hidden');

            fetch('/api/targets/create/', {
                method: 'POST',
                headers: { 'X-CSRFToken': getCsrfToken() },
                body: formData
            }).then(r => r.json()).then(data => {
                if (data.success) {
                    // Close modal and show progress instead of redirecting
                    closeAddTargetModal();

                    // Show scan progress overlay
                    showNewSiteScanProgress(data.id, name);
                } else {
                    // Reset UX
                    btn.disabled = false;
                    btn.classList.remove('opacity-75', 'cursor-not-allowed');
                    spinner.classList.add('hidden');
                    alert(data.error || 'Er ging iets mis');
                }
            }).catch(() => {
                // Reset UX on network error
                btn.disabled = false;
                btn.classList.remove('opacity-75', 'cursor-not-allowed');
                spinner.classList.add('hidden');
                alert('Netwerkfout. Probeer het opnieuw.');
            });
        }

        // Show full-screen scan progress for new sites
        function showNewSiteScanProgress(targetId, targetName) {
            // Create overlay with scan progress
            const overlay = document.createElement('div');
            overlay.id = 'new-site-progress-overlay';
            overlay.className = 'fixed inset-0 z-50 bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 flex items-center justify-center';
            overlay.innerHTML = `
                <div class="w-full max-w-2xl mx-4">
                    <!-- Header -->
                    <div class="text-center mb-8">
                        <div class="inline-flex items-center justify-center w-20 h-20 rounded-full bg-gradient-to-br from-blue-500 to-indigo-600 mb-4">
                            <svg class="w-10 h-10 text-white animate-pulse" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                            </svg>
                        </div>
                        <h2 class="text-2xl font-bold text-white mb-2">Nulmeting: ${targetName}</h2>
                        <p class="text-slate-400">De eerste analyse van de website wordt uitgevoerd</p>
                    </div>
                    
                    <!-- Progress Card -->
                    <div class="bg-white/10 backdrop-blur-xl rounded-3xl p-8 shadow-2xl border border-white/10">
                        <!-- Progress Bar -->
                        <div class="mb-6">
                            <div class="flex items-center justify-between mb-2">
                                <span id="new-site-status" class="text-white font-medium">Starten...</span>
                                <span id="new-site-percent" class="text-blue-400 font-mono font-bold">0%</span>
                            </div>
                            <div class="h-3 bg-slate-700/50 rounded-full overflow-hidden">
                                <div id="new-site-bar" class="h-full bg-gradient-to-r from-blue-500 via-indigo-500 to-purple-500 rounded-full transition-all duration-700 ease-out" style="width: 0%"></div>
                            </div>
                            <p id="new-site-detail" class="text-slate-500 text-sm mt-2">Verbinding maken met website...</p>
                        </div>
                        
                        <!-- Steps -->
                        <div class="grid grid-cols-4 gap-4">
                            <div id="new-step-1" class="text-center">
                                <div class="w-12 h-12 mx-auto rounded-full border-2 border-slate-600 bg-slate-800 flex items-center justify-center mb-2 transition-all duration-300">
                                    <span class="text-slate-500 font-bold text-sm">1</span>
                                </div>
                                <span class="text-slate-500 text-xs font-medium">Detecteren</span>
                            </div>
                            <div id="new-step-2" class="text-center">
                                <div class="w-12 h-12 mx-auto rounded-full border-2 border-slate-600 bg-slate-800 flex items-center justify-center mb-2 transition-all duration-300">
                                    <span class="text-slate-500 font-bold text-sm">2</span>
                                </div>
                                <span class="text-slate-500 text-xs font-medium">Screenshot</span>
                            </div>
                            <div id="new-step-3" class="text-center">
                                <div class="w-12 h-12 mx-auto rounded-full border-2 border-slate-600 bg-slate-800 flex items-center justify-center mb-2 transition-all duration-300">
                                    <span class="text-slate-500 font-bold text-sm">3</span>
                                </div>
                                <span class="text-slate-500 text-xs font-medium">AI Analyse</span>
                            </div>
                            <div id="new-step-4" class="text-center">
                                <div class="w-12 h-12 mx-auto rounded-full border-2 border-slate-600 bg-slate-800 flex items-center justify-center mb-2 transition-all duration-300">
                                    <span class="text-slate-500 font-bold text-sm">4</span>
                                </div>
                                <span class="text-slate-500 text-xs font-medium">Opslaan</span>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Footer hint -->
                    <p class="text-center text-slate-600 text-sm mt-6">Dit duurt meestal 30-60 seconden</p>
                </div>
            `;
            document.body.appendChild(overlay);

            // Start polling for progress
            let pollInterval = setInterval(() => {
                fetch(`/api/scan/${targetId}/status/`)
                    .then(res => res.json())
                    .then(progress => {
                        updateNewSiteProgress(progress);

                        if (progress.state === 'complete' || progress.state === 'no_change') {
                            clearInterval(pollInterval);
                            // Redirect to new target after short delay
                            setTimeout(() => {
                                window.location.href = '/?target=' + targetId;
                            }, 1500);
                        } else if (progress.state === 'failed') {
                            clearInterval(pollInterval);
                            alert('Scan mislukt: ' + (progress.detail || 'Onbekende fout'));
                            overlay.remove();
                        }
                    })
                    .catch(err => console.error('Progress poll error:', err));
            }, 1500);

            // Initial poll
            fetch(`/api/scan/${targetId}/status/`).then(res => res.json()).then(updateNewSiteProgress);
        }

        function updateNewSiteProgress(progress) {
            const stepInfo = {
                idle: { pct: 0, msg: 'Wachten...', detail: 'Scan wordt gestart', step: 0 },
                starting: { pct: 5, msg: 'Starten...', detail: 'Verbinding maken met website', step: 0 },
                scout: { pct: 20, msg: 'Wijzigingen detecteren', detail: 'Content hash berekenen...', step: 1 },
                no_change: { pct: 100, msg: '‚úì Voltooid!', detail: 'Nulmeting afgerond', step: 5 },
                capture: { pct: 45, msg: 'Screenshot maken', detail: 'Playwright browser actief...', step: 2 },
                gemini: { pct: 70, msg: 'AI Analyse', detail: 'Gemini analyseert de pagina...', step: 3 },
                saving: { pct: 90, msg: 'Opslaan', detail: 'Database bijwerken...', step: 4 },
                complete: { pct: 100, msg: '‚úì Voltooid!', detail: 'Nulmeting succesvol afgerond', step: 5 },
                failed: { pct: 0, msg: '‚úó Mislukt', detail: progress.detail || 'Fout opgetreden', step: -1 }

            const info = stepInfo[progress.state] || stepInfo.idle;

            const statusEl = document.getElementById('new-site-status');
            const percentEl = document.getElementById('new-site-percent');
            const barEl = document.getElementById('new-site-bar');
            const detailEl = document.getElementById('new-site-detail');

            if (statusEl) statusEl.textContent = info.msg;
            if (percentEl) percentEl.textContent = info.pct + '%';
            if (barEl) barEl.style.width = info.pct + '%';
            if (detailEl) detailEl.textContent = info.detail;

            // Update step indicators
            for (let i = 1; i <= 4; i++) {
                const stepEl = document.getElementById('new-step-' + i);
                if (!stepEl) continue;

                const circle = stepEl.querySelector('div');
                const text = stepEl.querySelector('span:last-child');
                const num = stepEl.querySelector('span:first-child');

                if (info.step === 5 || i < info.step) {
                    // Completed
                    circle.classList.remove('border-slate-600', 'bg-slate-800', 'border-blue-500', 'bg-blue-600');
                    circle.classList.add('border-green-500', 'bg-green-600');
                    if (num) num.textContent = '‚úì';
                    if (num) num.classList.remove('text-slate-500', 'text-white');
                    if (num) num.classList.add('text-white');
                    if (text) text.classList.remove('text-slate-500', 'text-blue-400');
                    if (text) text.classList.add('text-green-400');
                } else if (i === info.step) {
                    // Active
                    circle.classList.remove('border-slate-600', 'bg-slate-800', 'border-green-500', 'bg-green-600');
                    circle.classList.add('border-blue-500', 'bg-blue-600', 'animate-pulse');
                    if (num) num.classList.remove('text-slate-500');
                    if (num) num.classList.add('text-white');
                    if (text) text.classList.remove('text-slate-500', 'text-green-400');
                    if (text) text.classList.add('text-blue-400');
                }
            }

            // Success state
            if (info.step === 5 && barEl) {
                barEl.classList.remove('from-blue-500', 'via-indigo-500', 'to-purple-500');
                barEl.classList.add('from-green-500', 'via-emerald-500', 'to-teal-500');
            }
        }


        function saveTargetEdit(event) {
            event.preventDefault();
            const id = document.getElementById('edit-target-id').value;

            fetch(`/api/targets/${id}/update/`, {
                method: 'POST',
                headers: {
                    'X-CSRFToken': getCsrfToken(),
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    name: document.getElementById('edit-name').value,
                    url: normalizeUrl(document.getElementById('edit-url').value),
                    interval: document.getElementById('edit-interval').value
                })
            }).then(() => location.reload());
        }

        function deleteTarget() {
            if (!confirm('Weet je zeker dat je deze site wilt verwijderen? Dit kan niet ongedaan worden gemaakt.')) return;

            const id = document.getElementById('edit-target-id').value;
            fetch(`/api/targets/${id}/delete/`, {
                method: 'POST',
                headers: { 'X-CSRFToken': getCsrfToken() }
            }).then(() => window.location.href = '/');
        }

        function deleteScan(scanId) {
            if (!confirm('Weet je zeker dat je deze scan wilt verwijderen? De bijbehorende screenshot wordt ook verwijderd.')) return;

            fetch(`/api/scans/${scanId}/delete/`, {
                method: 'POST',
                headers: { 'X-CSRFToken': getCsrfToken() }
            })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        // Reload the page to refresh the scan list
                        location.reload();
                    } else {
                        alert('Fout bij verwijderen: ' + (data.error || 'Onbekende fout'));
                    }
                })
                .catch(error => {
                    console.error('Delete scan error:', error);
                    alert('Er is een fout opgetreden bij het verwijderen.');
                });
        }

        // ===== iOS-style Swipe-to-Reveal Actions =====

        // Handle site click - toggle swipe or navigate
        function handleSiteClick(event, targetId) {
            const wrapper = event.currentTarget;
            const isSwiped = wrapper.classList.contains('swiped');

            // Close all other swiped items first
            document.querySelectorAll('.site-item-wrapper.swiped').forEach(el => {
                if (el !== wrapper) el.classList.remove('swiped');
            });

            // Toggle swipe state
            if (!isSwiped) {
                wrapper.classList.add('swiped');
            } else {
                wrapper.classList.remove('swiped');
            }
        }

        // Apple-style delete confirmation with animation
        function confirmDeleteTarget(targetId, targetName) {
            // Close any swiped items
            document.querySelectorAll('.site-item-wrapper.swiped').forEach(el => {
                el.classList.remove('swiped');
            });

            // Create elegant confirmation dialog
            const overlay = document.createElement('div');
            overlay.className = 'fixed inset-0 bg-black/40 backdrop-blur-sm z-50 flex items-center justify-center';
            overlay.style.animation = 'fadeIn 0.15s ease-out';

            overlay.innerHTML = `
                <div class="bg-white rounded-2xl shadow-2xl p-6 max-w-sm mx-4 text-center" style="animation: slideUp 0.2s ease-out">
                    <div class="w-14 h-14 bg-red-100 rounded-full flex items-center justify-center mx-auto mb-4">
                        <svg class="w-7 h-7 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                        </svg>
                    </div>
                    <h3 class="text-lg font-semibold text-gray-900 mb-2">Site verwijderen?</h3>
                    <p class="text-gray-500 text-sm mb-6">"${targetName}" en alle bijbehorende scans worden permanent verwijderd.</p>
                    <div class="flex gap-3">
                        <button onclick="this.closest('.fixed').remove()" class="flex-1 px-4 py-2.5 bg-gray-100 hover:bg-gray-200 text-gray-700 font-medium rounded-xl transition-colors">
                            Annuleer
                        </button>
                        <button onclick="executeDeleteTarget(${targetId})" class="flex-1 px-4 py-2.5 bg-red-500 hover:bg-red-600 text-white font-medium rounded-xl transition-colors">
                            Verwijder
                        </button>
                    </div>
                </div>
            `;

            // Add animations
            const style = document.createElement('style');
            style.textContent = `
                @keyframes fadeIn { from { opacity: 0; } to { opacity: 1; }}
                @keyframes slideUp { from { opacity: 0; transform: translateY(20px); } to { opacity: 1; transform: translateY(0); }}
            `;
            overlay.appendChild(style);

            // Close on backdrop click
            overlay.addEventListener('click', (e) => {
                if (e.target === overlay) overlay.remove();
            });

            document.body.appendChild(overlay);
        }

        // Execute the deletion
        function executeDeleteTarget(targetId) {
            fetch(`/api/targets/${targetId}/delete/`, {
                method: 'POST',
                headers: { 'X-CSRFToken': getCsrfToken() }
            }).then(() => {
                // Animate removal
                const wrapper = document.querySelector(`[data-target-id="${targetId}"]`);
                if (wrapper) {
                    wrapper.style.transform = 'translateX(-100%)';
                    wrapper.style.opacity = '0';
                    wrapper.style.transition = 'all 0.3s ease';
                }
                setTimeout(() => window.location.href = '/', 300);
            });
        }

        // Touch gesture support for mobile swipe
        let touchStartX = 0;
        let touchCurrentX = 0;
        let currentSwipeWrapper = null;

        document.addEventListener('touchstart', (e) => {
            const wrapper = e.target.closest('.site-item-wrapper');
            if (wrapper) {
                touchStartX = e.touches[0].clientX;
                currentSwipeWrapper = wrapper;
            }
        }, { passive: true });

        document.addEventListener('touchmove', (e) => {
            if (!currentSwipeWrapper) return;
            touchCurrentX = e.touches[0].clientX;
        }, { passive: true });

        document.addEventListener('touchend', () => {
            if (!currentSwipeWrapper) return;

            const diff = touchStartX - touchCurrentX;

            if (diff > 50) {
                // Swipe left - show actions
                currentSwipeWrapper.classList.add('swiped');
            } else if (diff < -50) {
                // Swipe right - hide actions
                currentSwipeWrapper.classList.remove('swiped');
            }

            currentSwipeWrapper = null;
            touchStartX = 0;
            touchCurrentX = 0;
        });

        // Close swipe on outside click
        document.addEventListener('click', (e) => {
            if (!e.target.closest('.site-item-wrapper')) {
                document.querySelectorAll('.site-item-wrapper.swiped').forEach(el => {
                    el.classList.remove('swiped');
                });
            }
        });

        // Manual scan with animation and progress tracking
        let isScanning = false;
        let pollInterval = null;

        function updateProgressUI(progress) {
            const statusTitle = document.getElementById('scan-status-title');
            const statusDetail = document.getElementById('scan-status-detail');
            const statusPercent = document.getElementById('scan-status-percent');
            const statusBar = document.getElementById('scan-status-bar');
            const statusScanning = document.getElementById('status-scanning');

            // Step details for each state
            const stepInfo = {
                idle: { pct: 0, msg: 'Klaar', detail: 'Wachtend op volgende scan', step: 0 },
                starting: { pct: 5, msg: 'Scan starten...', detail: 'Verbinding maken met website', step: 0 },
                scout: { pct: 20, msg: 'Wijzigingen detecteren', detail: 'Content hash berekenen...', step: 1 },
                no_change: { pct: 100, msg: '‚úì Geen wijzigingen', detail: 'Website onveranderd - geen screenshot nodig', step: 5 },
                capture: { pct: 45, msg: 'Screenshot maken', detail: 'Playwright headless browser...', step: 2 },
                gemini: { pct: 70, msg: 'AI Analyse', detail: 'Gemini vergelijkt wijzigingen...', step: 3 },
                saving: { pct: 90, msg: 'Opslaan', detail: 'Database bijwerken...', step: 4 },
                complete: { pct: 100, msg: '‚úì Voltooid!', detail: 'Alle stappen afgerond', step: 5 },
                failed: { pct: 0, msg: '‚úó Mislukt', detail: progress.detail || 'Fout opgetreden', step: -1 }

            const info = stepInfo[progress.state] || stepInfo.idle;

            // Update status bar
            if (statusTitle) statusTitle.textContent = info.msg;
            if (statusDetail) statusDetail.textContent = info.detail;
            if (statusPercent) statusPercent.textContent = info.pct + '%';
            if (statusBar) statusBar.style.width = info.pct + '%';

            // Update inline step indicators (1-4)
            for (let i = 1; i <= 4; i++) {
                const step = document.getElementById('inline-step-' + i);
                if (!step) continue;

                const dot = step.querySelector('.step-dot');

                if (info.step === 5 || i < info.step) {
                    // Completed - green
                    step.classList.remove('text-slate-400', 'text-blue-600');
                    step.classList.add('text-green-600');
                    if (dot) {
                        dot.classList.remove('border-slate-300', 'bg-white', 'border-blue-500', 'bg-blue-500', 'animate-pulse');
                        dot.classList.add('border-green-500', 'bg-green-500', 'text-white');
                        dot.textContent = '‚úì';
                    }
                } else if (i === info.step) {
                    // Active - blue with pulse
                    step.classList.remove('text-slate-400', 'text-green-600');
                    step.classList.add('text-blue-600');
                    if (dot) {
                        dot.classList.remove('border-slate-300', 'bg-white', 'border-green-500', 'bg-green-500');
                        dot.classList.add('border-blue-500', 'bg-blue-500', 'text-white', 'animate-pulse');
                        dot.textContent = i;
                    }
                } else {
                    // Future - gray
                    step.classList.remove('text-blue-600', 'text-green-600');
                    step.classList.add('text-slate-400');
                    if (dot) {
                        dot.classList.remove('border-blue-500', 'bg-blue-500', 'border-green-500', 'bg-green-500', 'text-white', 'animate-pulse');
                        dot.classList.add('border-slate-300', 'bg-white');
                        dot.textContent = i;
                    }
                }
            }

            // Handle complete - reload after delay
            if (progress.state === 'complete') {
                if (statusBar) {
                    statusBar.classList.remove('from-blue-500', 'via-indigo-500', 'to-purple-500');
                    statusBar.classList.add('from-green-500', 'via-emerald-500', 'to-teal-500');
                }
                setTimeout(() => location.reload(), 1500);
            } else if (progress.state === 'no_change') {
                // No changes detected - show green success and refresh
                if (statusBar) {
                    statusBar.classList.remove('from-blue-500', 'via-indigo-500', 'to-purple-500');
                    statusBar.classList.add('from-green-500', 'via-emerald-500', 'to-teal-500');
                }
                setTimeout(() => location.reload(), 2000);
            } else if (progress.state === 'failed') {
                if (statusScanning) {
                    statusScanning.classList.remove('from-blue-50', 'via-indigo-50', 'to-purple-50', 'border-blue-200/50');
                    statusScanning.classList.add('from-red-50', 'via-orange-50', 'to-rose-50', 'border-red-200');
                }
                if (statusBar) {
                    statusBar.classList.remove('from-blue-500', 'via-indigo-500', 'to-purple-500');
                    statusBar.classList.add('from-red-500', 'to-orange-500');
                }
            }
        }



        function pollProgress(targetId) {
            fetch(`/api/scan/${targetId}/status/`)
                .then(res => res.json())
                .then(progress => {
                    updateProgressUI(progress);

                    // Stop polling if complete, no_change, or failed
                    if (progress.state === 'complete' || progress.state === 'no_change' || progress.state === 'failed') {
                        clearInterval(pollInterval);
                        pollInterval = null;
                        isScanning = false;
                    }
                })
                .catch(err => console.error('Progress poll error:', err));
        }

        function startManualScan(targetId) {
            if (isScanning) return;
            isScanning = true;

            const btn = document.getElementById('scan-btn');
            const btnText = document.getElementById('scan-btn-text');
            const btnSpinner = document.getElementById('scan-btn-spinner');
            const countdown = document.getElementById('countdown');
            const statusStable = document.getElementById('status-stable');
            const statusScanning = document.getElementById('status-scanning');

            // Update button state
            btnText.textContent = '...';
            btnSpinner.classList.remove('hidden');
            btn.classList.add('scanning', 'bg-blue-600');
            if (countdown) countdown.classList.add('scanning');

            // Apple-style transition: fade out stable, fade in scanning
            if (statusStable) {
                statusStable.classList.add('opacity-0', 'scale-95');
                setTimeout(() => {
                    statusStable.classList.add('hidden');

                    // Show scanning status with animation
                    if (statusScanning) {
                        statusScanning.classList.remove('hidden');

                        // Trigger animation after a frame
                        requestAnimationFrame(() => {
                            statusScanning.classList.remove('opacity-0', 'translate-y-2');
                            statusScanning.classList.add('opacity-100', 'translate-y-0');
                        });
                    }
                }, 300);
            } else if (statusScanning) {
                // No stable bar, just show scanning
                statusScanning.classList.remove('hidden');
                requestAnimationFrame(() => {
                    statusScanning.classList.remove('opacity-0', 'translate-y-2');
                    statusScanning.classList.add('opacity-100', 'translate-y-0');
                });
            }

            // Reset step indicators
            for (let i = 1; i <= 4; i++) {
                const step = document.getElementById('inline-step-' + i);
                if (step) {
                    step.classList.remove('text-blue-600', 'text-green-600');
                    step.classList.add('text-slate-400');
                    const dot = step.querySelector('.step-dot');
                    if (dot) {
                        dot.classList.remove('border-blue-500', 'bg-blue-500', 'border-green-500', 'bg-green-500', 'text-white', 'animate-pulse');
                        dot.classList.add('border-slate-300', 'bg-white');
                        dot.textContent = i;
                    }
                }
            }

            // Trigger scan
            fetch(`/api/scan/${targetId}/`, {
                method: 'POST',
                headers: { 'X-CSRFToken': getCsrfToken() }
            }).then(() => {
                // Start polling for progress
                pollInterval = setInterval(() => pollProgress(targetId), 1500);
                // Also poll immediately
                pollProgress(targetId);
            });
        }



        // Toggle target status
        function toggleTarget(targetId, isActive) {
            fetch(`/api/targets/${targetId}/toggle/`, {
                method: 'POST',
                headers: {
                    'X-CSRFToken': getCsrfToken(),
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ active: isActive })
            }).then(() => location.reload());
        }

        // Toggle advice visibility
        function toggleAdvice(scanId) {
            const adviceEl = document.getElementById('advice-' + scanId);
            adviceEl.classList.toggle('hidden');
        }

        // Toggle screenshot expand/collapse
        function toggleScreenshot(scanId) {
            const wrapper = document.getElementById('screenshot-wrapper-' + scanId);
            const text = document.getElementById('expand-text-' + scanId);

            if (wrapper.classList.contains('screenshot-collapsed')) {
                wrapper.classList.remove('screenshot-collapsed');
                wrapper.classList.add('screenshot-expanded');
                text.textContent = 'Inklappen';
            } else {
                wrapper.classList.add('screenshot-collapsed');
                wrapper.classList.remove('screenshot-expanded');
                text.textContent = 'Uitklappen';
            }
        }

        // Scroll to latest screenshot
        function scrollToLatest() {
            const container = document.getElementById('screenshots-container');
            container.scrollTo({ top: 0, behavior: 'smooth' });
        }

        // Resizable columns
        const resizeHandle = document.getElementById('resize-handle');
        const middlePanel = document.getElementById('middle-panel');
        const rightPanel = document.getElementById('right-panel');

        if (resizeHandle && middlePanel) {
            let isResizing = false;
            let startX, startWidth;
            const container = middlePanel.parentElement;

            resizeHandle.addEventListener('mousedown', (e) => {
                isResizing = true;
                startX = e.clientX;
                startWidth = middlePanel.offsetWidth;
                resizeHandle.classList.add('active');
                document.body.style.cursor = 'col-resize';
                document.body.style.userSelect = 'none';
            });

            document.addEventListener('mousemove', (e) => {
                if (!isResizing) return;
                const containerWidth = container.offsetWidth - 280; // minus left panel
                const diff = e.clientX - startX;
                const newWidth = startWidth + diff;
                const minRight = containerWidth * 0.20; // 20% minimum for right
                const maxMiddle = containerWidth - minRight;

                const clampedWidth = Math.max(300, Math.min(maxMiddle, newWidth));
                middlePanel.style.width = clampedWidth + 'px';
            });

            document.addEventListener('mouseup', () => {
                if (isResizing) {
                    isResizing = false;
                    resizeHandle.classList.remove('active');
                    document.body.style.cursor = '';
                    document.body.style.userSelect = '';
                }
            });
        }

        // Auto-scan on page load for new targets
        {% if selected_target and selected_target.status == 'active' and not scans %}
        window.addEventListener('DOMContentLoaded', function () {
            // Show scanning indicator
            const indicator = document.getElementById('scanning-indicator');
            if (indicator) {
                indicator.innerHTML = `
                <div class="scanning">
                    <svg class="w-12 h-12 text-blue-500 animate-spin" fill="none" viewBox="0 0 24 24">
                        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4z"></path>
                    </svg>
                </div>
                <p class="text-gray-600 font-medium mt-4">Eerste scan bezig...</p>
                <p class="text-gray-400 text-sm mt-1">¬±30 seconden</p>
            `;
            }
            // Poll for completion - only if no modal is open
            function safeReload() {
                const addModal = document.getElementById('addTargetModal');
                const editModal = document.getElementById('editTargetModal');
                if (addModal && !addModal.classList.contains('hidden')) return;
                if (editModal && !editModal.classList.contains('hidden')) return;
                location.reload();
            }
            setTimeout(safeReload, 5000);
            setInterval(safeReload, 10000);
        });
        {% endif %}

        // Countdown timer
        {% if selected_target and selected_target.status == 'active' and selected_target.last_scan_at %}
        function updateCountdown() {
            const lastScan = new Date('{{ selected_target.last_scan_at|date:"c" }}');
            const intervalMinutes = {{ selected_target.interval }};
        const nextScan = new Date(lastScan.getTime() + intervalMinutes * 60 * 1000);
        const now = new Date();
        const remaining = nextScan - now;

        const countdownEl = document.getElementById('countdown');
        if (!countdownEl) return;

        if (remaining <= 0) {
            countdownEl.textContent = 'Nu!';
            countdownEl.classList.add('text-accent', 'animate-pulse');
        } else {
            const minutes = Math.floor(remaining / 60000);
            const seconds = Math.floor((remaining % 60000) / 1000);
            countdownEl.textContent = String(minutes).padStart(2, '0') + ':' + String(seconds).padStart(2, '0');
            countdownEl.classList.remove('text-accent', 'animate-pulse');
        }
        }

        // Start countdown timer on page load
        updateCountdown();
        setInterval(updateCountdown, 1000);
        {% endif %}
    </script>