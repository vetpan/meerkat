-520 42 -204 51 -293 58 -546 6 -238 -6 -438 -37 -588 -25 -124 -108 -406 -265 -896 -31 -99 -83 -263 -115 -365 -31 -102 -90 -288 -129 -415 -126 -404 -150 -459 -236 -530 -24 -19 -75 -50 -112 -68 -65 -31 -73 -32 -190 -32 -68 0 -126 4 -132 10 -6 7 -3 22 8 45 28 55 81 151 111 200 96 158 367 703 405 815 86 253 71 456 -53 705 -31 63 -58 118 -60 122 -2 4 32 25 75 45 150 72 277 228 332 406 52 170 30 548 -49 837 -73 265 -251 613 -424 831 -12 14 -32 40 -46 59 -85 113 -141 176 -549 625 -30 33 -145 170 -206 247 -15 18 -92 133 -148 218 -78 120 -190 376 -230 525 -35 132 -48 264 -45 470 l3 200 77 7 c90 8 125 24 166 74 54 66 58 145 18 382 -28 165 8 238 131 261 28 6 319 11 657 12 365 1 609 5 612 11 9 15 -43 82 -89 115 -101 71 -67 68 -727 70 -561 2 -599 1 -668 -17z" />
                            </g>
                        </svg>
                    </div>
                    <div>
                        <div class="text-[15px] font-bold text-ink tracking-tight">Meerkat</div>
                        <div class="text-[11px] text-ink-tertiary font-medium tracking-wide uppercase">Competitor
                            Intelligence</div>
                    </div>
                </div>
            </div>

            <!-- Sites List -->
            <div class="flex-1 overflow-y-auto">
                <div class="p-5">
                    <h2 class="text-[10px] font-semibold text-ink-tertiary uppercase tracking-widest mb-4">Monitored
                        Sites</h2>
                    <div class="space-y-1">
                        {% for target in targets %}
                        <div class="site-item-wrapper" data-target-id="{{ target.id }}"
                            onclick="handleSiteClick(event, {{ target.id }})">
                            <!-- Swipe Actions (behind the content) -->
                            <div class="site-item-actions">
                                <button class="site-action-btn edit"
                                    onclick="event.stopPropagation(); openEditTargetModal({{ target.id }}, '{{ target.name|escapejs }}', '{{ target.url|escapejs }}', {{ target.interval }})">
                                    <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                    </svg>
                                    <span>Wijzig</span>
                                </button>
                                <button class="site-action-btn delete"
                                    onclick="event.stopPropagation(); confirmDeleteTarget({{ target.id }}, '{{ target.name|escapejs }}')">
                                    <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                    </svg>
                                    <span>Verwijder</span>
                                </button>
                            </div>

                            <!-- Main Content (slides to reveal actions) -->
                            <div
                                class="site-item-content site-item p-3 {% if selected_target and selected_target.id == target.id %}active{% endif %}">
                                <a href="?target={{ target.id }}" class="flex items-center space-x-3"
                                    onclick="event.stopPropagation();">
                                    <div class="relative flex-shrink-0">
                                        <div
                                            class="w-2 h-2 rounded-full {% if target.status == 'active' %}bg-success{% else %}bg-danger{% endif %}">
                                        </div>
                                    </div>
                                    <div class="flex-1 min-w-0 pr-16">
                                        <div class="flex items-center gap-2">
                                            <p class="font-medium text-ink text-[13px] truncate">{{ target.name }}</p>
                                            <span
                                                class="text-[10px] px-1.5 py-0.5 bg-surface-secondary text-ink-tertiary rounded-md font-mono">{{
                                                target.interval }}m</span>
                                        </div>
                                        <p class="text-[11px] text-ink-tertiary truncate mt-0.5">{{
                                            target.url|slice:":35" }}...</p>
                                    </div>
                                </a>

                                <!-- Desktop hover actions -->
                                <div class="site-item-hover-actions">
                                    <button class="hover-action-btn edit"
                                        onclick="event.stopPropagation(); openEditTargetModal({{ target.id }}, '{{ target.name|escapejs }}', '{{ target.url|escapejs }}', {{ target.interval }})"
                                        title="Wijzigen">
                                        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                        </svg>
                                    </button>
                                    <button class="hover-action-btn delete"
                                        onclick="event.stopPropagation(); confirmDeleteTarget({{ target.id }}, '{{ target.name|escapejs }}')"
                                        title="Verwijderen">
                                        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                        </svg>
                                    </button>
                                </div>


                            </div>
                        </div>
                        {% empty %}
                        <div class="text-center py-8">
                            <p class="text-[13px] text-ink-tertiary">Nog geen sites toegevoegd</p>
                            <p class="text-[11px] text-ink-tertiary/60 mt-1">Klik hieronder om te starten</p>
                        </div>
                        {% endfor %}
                    </div>
                </div>
            </div>

            <!-- Matrix Link -->
            <div class="px-5 pb-1">
                <a href="{% url 'dashboard:matrix' %}"
                    class="w-full flex items-center gap-2 p-2.5 text-ink-tertiary hover:text-ink hover:bg-surface-secondary rounded-xl transition-all text-left">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                            d="M9 17V7m0 10a2 2 0 01-2 2H5a2 2 0 01-2-2V7a2 2 0 012-2h2a2 2 0 012 2m0 10a2 2 0 002 2h2a2 2 0 002-2M9 7a2 2 0 012-2h2a2 2 0 012 2m0 10V7m0 10a2 2 0 002 2h2a2 2 0 002-2V7a2 2 0 00-2-2h-2a2 2 0 00-2 2" />
                    </svg>
                    <span class="text-[12px] font-medium">Concurrentie Matrix</span>
                </a>
            </div>

